<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sly.a8405_tp1.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:src="@drawable/main_logo" />


    <TableRow
        android:id="@+id/mainTableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainLogo">
        <Button
            android:text="Niveau 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="onClick"
            android:id="@+id/level1_start" />
        <Button
            android:text="Niveau 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="onClick"
            android:id="@+id/level2_start" />
    </TableRow>

    <TableRow
        android:id="@+id/mainTableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainTableRow1"
        android:layout_alignParentStart="true">
        <Button
            android:text="Niveau 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="onClick"
            android:id="@+id/level3_start" />
        <Button
            android:text="Niveau 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="onClick"
            android:id="@+id/level4_start" />
    </TableRow>

    <TableRow
        android:id="@+id/mainTableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainTableRow2">
        <Button
            android:text="Rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="rulesButtonClicked"
            android:id="@+id/buttonRules" />
        <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="exitButtonClicked"
            android:id="@+id/bouttonQuitter" />
    </TableRow>


</RelativeLayout>
