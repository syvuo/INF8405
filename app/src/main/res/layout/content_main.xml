<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="6"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.inf8405.tp1.match3.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/main_logo"
        android:layout_weight="3" />

    <LinearLayout
        android:id="@+id/content_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <Button
            android:text="Start"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:onClick="startButtonClicked"
            android:id="@+id/buttonStart"
            tools:textStyle="bold|normal"
            android:layout_height="0dp" />

        <Button
            android:text="Rules"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="rulesButtonClicked"
            android:id="@+id/buttonRules"
            android:textStyle="normal|bold"
            android:elevation="1dp" />

        <Button
            android:text="Exit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="exitButtonClicked"
            android:id="@+id/bouttonQuitter"
            android:textStyle="normal|bold" />

    </LinearLayout>


</LinearLayout>
